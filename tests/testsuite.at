AT_INIT
AT_COLOR_TESTS

m4_define([FIND_ZEUGL], [[set -x
if test "$AUTOTEST_PATH" == "$at_testdir"; then
    zeugl="$abs_top_builddir/cli/zeugl"
    compare="$(dirname "$zeugl")/.libs/lt-zeugl"
else
    LD_LIBRARY_PATH="$AUTOTEST_PATH/../lib" export LD_LIBRARY_PATH
    zeugl="$AUTOTEST_PATH/zeugl"
    compare="$(zeugl)"
fi]])


########################################

AT_SETUP([Test logging functions])
. $abs_top_builddir/src/utils/logger.sh
AT_CHECK([log_debug "Hello World!"], 0, [testsuite: debug: Hello World!
])
AT_CHECK([log_info "Hello World!"], 0, [testsuite: info: Hello World!
])
AT_CHECK([log_error "Hello World!"], 0, [], [testsuite: error: Hello World!
])
AT_CLEANUP

